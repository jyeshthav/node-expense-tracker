<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>node-pig</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>
    <div class="jumbotron text-center">
        <h1>Expense tracker</h1>
        <form action="/total" method="post">
            <div class="container mt-4 mb-2">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-10">
                        <table class="table">
                            <tr>
                                <td>Travel Expense: <%= qs[0].item %></td>
                                <td><input type="text" id="expense" name="expense1" placeholder=" Travel Expense" value=0></td>
                                <td>Food Expense: <%= qs[1].item %></td>
                                <td><input type="text" id="expense" name="expense2" placeholder="Food Expense" value=0></td>
                            </tr>
                            <tr>
                                <td>Other Expense: <%= qs[2].item %></td>
                                <td><input type="text" id="expense" name="expense3" placeholder="Other Expense" value=0></td>
                                <td>Total Income: <%= qs[4].item %></td>
                                <td><input type="text" id="income" name="income" placeholder="Income" value=0></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-sm-1"></div>
                </div>
            </div>
            <div class="container">
                <button type="submit" class="btn btn-primary">Show</button>
            </div>
        </form>
    </div>
</body>
</html>