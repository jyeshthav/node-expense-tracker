<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>node-pig</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>
    <div class="jumbotron text-center">
        <h1>Expense tracker</h1>
        <form action="/" method="post">
            <div class="container inputs mt-4 mb-2">
                <div class="row">
                    <div class="col-md-1">
                        <p>Expense: <%= qs[0].item %></p>
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="expense" name="expense1" placeholder=" Travel Expense" value=0>
                    </div>
                    <div class="col-md-1">
                        <p>Expense: <%= qs[1].item %></p>
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="expense" name="expense2" placeholder="Food Expense" value=0>
                    </div>
                    <div class="col-md-1">
                        <p>Expense: <%= qs[2].item %></p>
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="expense" name="expense3" placeholder="Other Expense" value=0>
                    </div>
                    <div class="col-md-1">
                        <p>Income: <%= qs[3].item %></p>
                    </div>
                    <div class="col-md-2">
                        <input type="text" id="income" name="income" placeholder="Income" value=0>
                    </div>
                </div>
            </div>
            <div class="container">
                <button type="submit" class="btn btn-primary">Show</button>
            </div>
        </form>
    </div>
</body>
</html>